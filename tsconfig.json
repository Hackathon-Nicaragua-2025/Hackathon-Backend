{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./build",
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}